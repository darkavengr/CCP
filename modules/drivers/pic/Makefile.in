ASM=@asm@
CC=@cc@
LD=@ld@
CFILES=pic.c
ASMFILES=pic_inthandler_@arch@.asm
COBJFILES=$(addsuffix .o,$(basename $(notdir $(CFILES))))
ASMOBJFILES=$(addsuffix .o,$(basename $(notdir $(ASMFILES))))

all: $(COBJFILES) $(ASMOBJFILES)

$(COBJFILES): %.o: %.c
	$(CC) -c -w -I@buildroot@/header -I@buildroot@/kernel/hwdep/@arch@ $< -o $(addprefix @buildroot@/obj/@arch@/,$@)

$(ASMOBJFILES): %.o: %.asm
	$(ASM) -felf32 -I@buildroot@/kernel/hwdep/@arch@/ $< -o $(addprefix @buildroot@/obj/@arch@/,$@)


ASM=@asm@
CC=@cc@
LD=@cc@

#
# Recipe to make everything
#
all: kernel loader initrd command

#
# Recipe to make kernel
#
.PHONY: kernel
kernel:
	make -C kernel

#
# Recipe to make loader
#
.PHONY: loader
loader:
	make -C loader

#
# Recipe to make intial RAM disk
#
.PHONY: initrd
initrd:
	./gen_initrd  @buildroot@/obj/@arch@ @buildroot@/bin/@arch@/INITRD.SYS @initrd_driver_list@

#
# Recipe to make command interpreter
#
.PHONY: command
command:
	make -C command

clean:
	rm bin/@arch@/*
	rm obj/@arch@/*
	rm *.map
	rm drive.c
	rm command/*.o
	rm ccp.sym

distclean:
	rm obj/@arch@/*
	rm bin/@arch@/*
	rm `find -iname Makefile`
	rm drive.c
	rm *.map
	rm command/*.o
	rm ccp.sym

